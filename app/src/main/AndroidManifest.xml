<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quintus.labs.datingapp">
    <!-- add internet to login   -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission
        android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        android:minSdkVersion="30" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <application
        android:name="com.clmca.labs.datingapp.service.sharedprefs.App"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.clmca.labs.datingapp.SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name="com.clmca.labs.datingapp.Login.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.clmca.labs.datingapp.Matched.Matched_Activity" />
        <activity android:name="com.clmca.labs.datingapp.Profile.Profile_Activity" />
        <activity android:name="com.clmca.labs.datingapp.Main.ProfileCheckinMain" />
        <activity android:name="com.clmca.labs.datingapp.Matched.ProfileCheckinMatched" />
        <activity android:name="com.clmca.labs.datingapp.Profile.EditProfileActivity" />
        <activity android:name="com.clmca.labs.datingapp.Main.MainActivity" />
        <activity android:name="com.clmca.labs.datingapp.Profile.SettingsActivity" />
        <activity android:name="com.clmca.labs.datingapp.Main.BtnLikeActivity" />
        <activity android:name="com.clmca.labs.datingapp.Main.BtnDislikeActivity" />
    </application>

</manifest>